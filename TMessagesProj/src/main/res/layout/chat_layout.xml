<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/below_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true"

        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:layout_height="match_parent"
            android:id="@+id/id_back_fram"
            android:gravity="center"
            android:orientation="vertical">


             <ImageView
                  android:id="@+id/id_back_img"
                 android:layout_width="match_parent"
                 android:layout_gravity="left"
                 android:layout_height="match_parent"
                 android:background="@drawable/ic_bar_back"
                 android:gravity="center"
                 />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_attack_Layout">

            <ImageView
                android:id="@+id/attach_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/tab_selector"
                android:src="@drawable/bar_attach"
                />
        </LinearLayout>
             <FrameLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_chat_fram">

            <ImageView
                android:id="@+id/chat_img"
                android:layout_width="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent"
                android:background="@drawable/image_selector"
                android:gravity="center"

                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/id_menu_fram">


            <ImageView
                android:id="@+id/menue_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tab_selector"
                android:gravity="center"
                android:src="@drawable/bar_menu"
                />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
