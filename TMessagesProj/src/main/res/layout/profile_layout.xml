    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="#ffffffff"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:id="@+id/notification_layout1">
        </FrameLayout>

        <LinearLayout
            android:id="@+id/below_layout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_gravity="bottom"
            android:layout_height="50dp"
            android:background="@color/black"
            android:layout_alignParentBottom="true"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/ic_bar_back"
                android:layout_height="match_parent"
                android:id="@+id/id_back"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/tab_top_trip_selector"></View>

               <!-- <ImageView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                    android:background="@drawable/tab_selector"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    bacgr
                    android:src="@drawable/ic_bar_back"
                    />-->
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff151515"></View>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#ff323232"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/id_edit">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/tab_top_trip_selector"></View>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab_selector"
                    android:gravity="center"
                    android:src="@drawable/menu_bar_edit"
                    />

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff151515"></View>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#ff323232"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/id_chat">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/tab_top_trip_selector">

                </View>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab_selector"
                    android:gravity="center"
                    android:src="@drawable/bar_chats"
                    />
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#ff151515"></View>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#ff323232"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/id_menu">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab_selector"
                    android:gravity="center"
                    android:src="@drawable/bar_menu"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
